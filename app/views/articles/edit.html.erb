<h1>Editing Article</h1>

<%=form_with(model: @article, local: true) do |f|%>
<p>
    <%= f.label :title%>
    <br>
    <%= f.text_field :title%>
</p>
<p>
    <%= f.label :description%>
    <br>
    <%= f.text_area :description%>
</p>
<p>
    <%= f.label :theme%>
    <br>
    <%= f.text_field :theme%>
</p>
<p>
<%= f.submit%>
</p>
<%end%>

<%= link_to 'Show', @article %> |
<%= link_to 'Back', articles_path %>
