<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>
<div class="container">
  <h1 class="text-center">Bloggers</h1>
  <div class="allArticles">
    <% @users.each do |user| %>
      <div class="card mt-4 shadow" style="width: 50%;">
        <div class="card-body text-center">
          <h1><%=link_to "#{user.username}",user%></h1>
          <%=link_to gravatar_for(user, size: 150), user%>
          <h4>Articles on site <%= user.articles.length%></h4>
          <%= link_to "View profile", user, class: "btn btn-outline-success" %>
          <% if logged_in? && (current_user == user || current_user.admin?)%>
            <% if current_user == user%>
              <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info" %>
            <% end %>
            <% if current_user.admin?%>
              <%= link_to "Delete user", user_path(user), class: "btn btn-outline-danger", method: :delete, data: {confirm:"Are you sure you want to delete user and his articles?"}%>
            <% end %>
          <% end %>
          <br>
          <small>Joined in <%= time_ago_in_words(user.created_at)%>,</small>
          <small>Update info <%= time_ago_in_words(user.updated_at)%></small>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>