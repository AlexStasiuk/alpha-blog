<h1 class="text-center mt-4 text-info">New Category</h1>

<div class="container">    
  <div class="row justify-content-center ">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, local: true,class:"shadow rounded bg-info p-3") do |form| %>
        <div class="form-group row">
          <%= form.label :name, "Category name", class:"col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= form.text_field :name, class:"form-control shadow", placeholder:"Enter category name"%>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit class: "btn btn-outline-light btn-lg"%>
        </div>
      <% end %>
      <div class="row justify-content-center"><%= link_to 'All articles', articles_path, class:"text-info myLink"%></div>
      
    </div>
  </div>
</div>